<%= form_for(@lab3ro) do |f| %>
  <% if @lab3ro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lab3ro.errors.count, "error") %> prohibited this lab3ro from being saved:</h2>

      <ul>
      <% @lab3ro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-2 columns">
      <%= f.label :fecha %>
      <%= f.date_select :fecha  %>
    </div>
  </div>

  <div class="row">
    <div class="large-3 columns">
      <%= f.label :campo_id %>
      <%= f.collection_select(:campo_id, Campo.all.where(:usuario_id => @current_user.id),:id, :nombre, {} ,{:id=>'Campo'}) %>
    </div>
    <div class="large-2 columns">
      <%= f.label :lote_id %>
      <%= f.collection_select(:lote_id, Lote.where(:campo_id => Campo.where(:usuario_id => @current_user.id).first), :id, :lote,{},{:id=>'Lote'}) %>
    </div>
    <div class="large-7 columns">
    </div>
  </div>

  <div class="row">
    <div class="large-2 columns">
      <%= f.label :superficie %>
      <%= f.text_field :superficie %>
    </div>
    <div class="large-2 columns">
      <%= f.label :actividad_id, "Actividad" %>
      <%= f.collection_select :actividad_id, Actividad.all.where(:usuario_id => @current_user.id), :id, :actividad %>
    </div>
    <div class="large-2 columns">
      <%= f.label :labor %>
      <%= f.text_field :labor %>
    </div>
     <div class="large-2 columns">
      <%= f.label :costo %>
      <%= f.text_field :costo %>
    </div>
    <div class="large-4 columns">
    </div>
  </div>

  <div class="row">
    <div class="large-8 columns">
      <%= f.label :comentario %>
      <%= f.text_area :comentario %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <ul class="button-group">
        <li><button class="tiny" type="submit">Aceptar</button></li>
        <li class="button tiny"><%= link_to 'Volver', lab3ros_path  %></li>
      </ul>
    </div>
  </div>
<% end %>
