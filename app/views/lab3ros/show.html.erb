<table>
  <thead align = "center">
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Costo</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody align= "center">
    <% @insumolab3ros.each do |a| %>
      <tr>
        <td><%= a.insumo.producto %></td>
        <td><%= a.cantidad %></td>
        <td><%= a.cantidad * a.precio %></td>
        <td><%= a.comentario %></td>
        <td><%= link_to 'Modificar', edit_lab3ro_insumolab3ro_path(@lab3ro, a) %></td>
