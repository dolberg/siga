<div align= "center">
<h3>Iniciar Sesión</h3>
<%= form_tag({:controller => "usuarios", :action => "index"}, :method => "post") do |f| %>

	<div class="row">
		
   		<div class="large-2 large-centered columns">
			<%= label_tag "nombre_usuario", "Nombre de usuario" %>
			<%= text_field_tag "nombre_usuario", "", :required => "required" %>
		</div>
	</div>

	<div class="row">
   		<div class="large-2 large-centered columns">
			<%= label_tag "contrasena", "Contraseña" %>
			<%= password_field_tag "contrasena", "", :required => "required" %>
		</div>
	</div>

	 <div class="row">
    <div class="large-3 large-centered columns">
      <ul class="button-group">
        <li><button class="tiny" type="submit">Ingresar</button></li>
        <li class="tiny button"><a href="#" data-reveal-id="myModal">Registrar</a></li>
      </ul>
    </div>
  </div>
<% end %>
<div id="myModal" class="reveal-modal" data-reveal>
    	<iframe width="420" height="420" src="/usuarios/registrar" frameborder="0" allowfullscreen></iframe>
	<a class="close-reveal-modal">Salir</a>
</div>
<% if @error_login %>
 <div style="color: #f00;"> El nombre de usuario o la contraseña son incorrectos. </div>
<% end %>


