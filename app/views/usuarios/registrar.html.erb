<h3> Registrarse </h3>
<%= form_for @usuario do |f| %> 
   <p> 
      <%= f.label :nombre, "Nombre" %>
      <br />
      <%= f.text_field :nombre, {:value => @nombre} %>
   </p>
   <p> 
      <%= f.label :apellido, "Apellido" %>
      <br />
      <%= f.text_area :apellido, {:value => @apellido} %>
   </p>
   <p> 
      <%= f.label :user, "Nombre de Ususario" %>
      <br />
      <%= f.text_field :user, {:value => @user} %>
   </p>

   <p>
      <%= f.label :pass, "ContraseÃ±a" %>
      <br />
      <%= f.password_field :pass, {:value => @pass, :size => "20", :maxlength => 20} %>
   </p>
   <p>
      <%= f.submit "Registrarse" %> <%= link_to "Cancelar", usuarios_path %>
   </p>
<% end %>