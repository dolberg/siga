<h1>Coeficientes UTA por Labor</h1>
<a href="#" data-reveal-id="Modal2"><button class="tiny">Definir Nueva Labor</button></a>

<div id="Modal2" class="reveal-modal" data-reveal>
      <iframe width="420" height="420" src="/coefuta/new" frameborder="0" allowfullscreen></iframe>
  <a class="close-reveal-modal"><button class="tiny"><%=link_to "Salir", coefuta_path %></button></a>
</div>
<table>
  <thead>
    <tr>
      <th>Labor</th>
      <th>Coeficiente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coefuta.each do |coefutum| %>
      <tr>
        <td><%= coefutum.labor %></td>
        <td><%= coefutum.coef %></td>
         <td> 
            <ul class="button-group">
              <li><a href="#" data-reveal-id="Modal2-<%=coefutum.id%>"><button class="tiny">Modificar</button></a></li>
              <div id="Modal2-<%=coefutum.id%>" class="reveal-modal" data-reveal>
                <iframe width="420" height="420" src= /coefuta/<%=coefutum.id%>/edit  frameborder="0" allowfullscreen></iframe>
                <a class="close-reveal-modal"><button class="tiny"><%=link_to "Salir", coefuta_path %></button></a>
              </div>
              <li><button class="tiny"><%= link_to 'Borrar', coefutum, method: :delete, data: { confirm: 'Are you sure?'}%></button></li>
            </ul>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>