<h1>Coeficientes UTA por Labor</h1>
<button class="button small" data-open="Modal2">Definir Nueva Labor</button>

<div id="Modal2" class="reveal-modal" data-reveal>
  <iframe width="420" height="420" src="/coefuta/new" frameborder="0" allowfullscreen></iframe>
  <button class="close-button" data-close aria-label="Salir" type="button"><%=link_to "Salir", coefuta_path %></button>
</div>
<table>
  <thead>
    <tr>
      <th>Labor</th>
      <th>Coeficiente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coefuta.each do |coefutum| %>
      <tr>
        <td><%= coefutum.labor %></td>
        <td><%= coefutum.coef %></td>
         <td> 
            <ul class="button-group">
              <li><button class="button tiny" data-open="Modal2-<%=coefutum.id%>">Modificar</button></li>
              <div id="Modal2-<%=coefutum.id%>" class="reveal-modal" data-reveal>
                <iframe width="420" height="420" src= /coefuta/<%=coefutum.id%>/edit  frameborder="0" allowfullscreen></iframe>
                <button class="close-button" data-close aria-label="Salir" type="button"><%=link_to "Salir", coefuta_path %></button>
              </div>
              <li><button class="button tiny"><%= link_to 'Borrar', coefutum, method: :delete, data: { confirm: 'Are you sure?'}%></button></li>
            </ul>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>