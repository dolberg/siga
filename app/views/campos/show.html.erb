<h2> <%= @campo.nombre %> </h2>
<div>
  Superficie: <%= @campo.superficie %> ha
</div>
<div>
   Provincia: <%= simple_format @campo.provincia %>
</div>
<div>
  Partido: <%= simple_format @campo.partido %>
</div>
<div>
  Localidad: <%= simple_format @campo.localidad %>
</div>
<p> <%= link_to "Agregar un Lote", new_campo_lote_path(@campo) %> | <%= link_to "Volver", campos_path %> </p>
<hr />
<table>
   <thead>
      <tr>
         <th>Lote</th>
         <th>Superficie</th>
         <th colspan="3"></th>
      </tr>
   </thead>
   <tbody>
      <% @lotes.each do |lote| %>
         <tr>
            <td><%= lote.lote %></td>
            <td><%= lote.superficie %> ha </td>
            <td><%= link_to "Editar", edit_campo_lote_path(@campo, lote) %></td>
            <td><%= link_to "Eliminar", campo_lote_path(@campo, lote), :confirm => "Seguro desea eliminar este lote?", :method => :delete %></td>
         </tr> 
      <% end %>
   </tbody>
</table>
